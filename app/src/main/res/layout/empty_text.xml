<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:visibility="gone"
    android:id="@+id/emptyTextLayout"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="@dimen/toolbarHeight">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:src="@drawable/empty"
        android:layout_marginBottom="50dp" />

    <TextView
        android:id="@+id/emptyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textPrimary"
        android:textColor="@color/textDisabled"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/toolbarHeight"
        android:textAlignment="center" />

    <View
        android:id="@+id/emptyTextPadding"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:visibility="gone" />

</LinearLayout>
