<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.krystianwsul.organizator">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".gui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".gui.tasks.ShowTaskActivity" />
        <activity android:name=".gui.instances.ShowGroupActivity" />
        <activity android:name=".gui.instances.ShowNotificationGroupActivity" />
        <activity android:name=".gui.instances.ShowInstanceActivity" />
        <activity android:name=".gui.customtimes.ShowCustomTimesActivity" />
        <activity
            android:name=".gui.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".gui.customtimes.ShowCustomTimeActivity" />
        <activity android:name=".gui.tasks.CreateRootTaskActivity" />
        <activity android:name=".gui.tasks.CreateChildTaskActivity" />
        <activity android:name=".gui.instances.EditInstanceActivity" />

        <receiver
            android:name=".BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".GroupNotificationDeleteReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".InstanceNotificationDeleteReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".GroupNotificationContentReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".InstanceNotificationContentReceiver"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name=".TickService"
            android:exported="false"></service>
    </application>

</manifest>
