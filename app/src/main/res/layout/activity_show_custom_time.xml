<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.customtimes.ShowCustomTimeActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/custom_time_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <EditText
            android:id="@+id/custom_time_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="text"
            android:textColor="@color/textPrimaryWhite"
            android:hint="@string/name_hint"
            android:textColorHint="@color/textDisabledWhite"
            android:visibility="invisible"/>

    </android.support.v7.widget.Toolbar>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:stretchColumns="0">

        <TableRow>

            <TextView
                android:id="@+id/time_sunday_name"
                android:singleLine="true"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="@dimen/listVerticalPadding"
                android:layout_marginBottom="@dimen/listVerticalPadding"/>

            <TextView
                android:id="@+id/time_sunday_time"
                android:singleLine="true"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="@dimen/listVerticalPadding"
                android:layout_marginBottom="@dimen/listVerticalPadding"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/time_monday_name"
                android:singleLine="true"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="@dimen/listVerticalPadding"
                android:layout_marginBottom="@dimen/listVerticalPadding"/>

            <TextView
                android:id="@+id/time_monday_time"
                android:singleLine="true"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="@dimen/listVerticalPadding"
                android:layout_marginBottom="@dimen/listVerticalPadding"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/time_tuesday_name"
                android:singleLine="true"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="@dimen/listVerticalPadding"
                android:layout_marginBottom="@dimen/listVerticalPadding"/>

            <TextView
                android:id="@+id/time_tuesday_time"
                android:singleLine="true"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="@dimen/listVerticalPadding"
                android:layout_marginBottom="@dimen/listVerticalPadding"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/time_wednesday_name"
                android:singleLine="true"
                app:layout_columnSpan="1"
                app:layout_column="0"
                app:layout_row="3"
                app:layout_rowSpan="1"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="@dimen/listVerticalPadding"
                android:layout_marginBottom="@dimen/listVerticalPadding"/>

            <TextView
                android:id="@+id/time_wednesday_time"
                android:singleLine="true"
                app:layout_columnSpan="1"
                app:layout_column="1"
                app:layout_row="3"
                app:layout_rowSpan="1"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="@dimen/listVerticalPadding"
                android:layout_marginBottom="@dimen/listVerticalPadding"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/time_thursday_name"
                android:singleLine="true"
                app:layout_columnSpan="1"
                app:layout_column="0"
                app:layout_row="4"
                app:layout_rowSpan="1"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="@dimen/listVerticalPadding"
                android:layout_marginBottom="@dimen/listVerticalPadding"/>

            <TextView
                android:id="@+id/time_thursday_time"
                android:singleLine="true"
                app:layout_columnSpan="1"
                app:layout_column="1"
                app:layout_row="4"
                app:layout_rowSpan="1"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="@dimen/listVerticalPadding"
                android:layout_marginBottom="@dimen/listVerticalPadding"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/time_friday_name"
                android:singleLine="true"
                app:layout_columnSpan="1"
                app:layout_column="0"
                app:layout_row="5"
                app:layout_rowSpan="1"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="@dimen/listVerticalPadding"
                android:layout_marginBottom="@dimen/listVerticalPadding"/>

            <TextView
                android:id="@+id/time_friday_time"
                android:singleLine="true"
                app:layout_columnSpan="1"
                app:layout_column="1"
                app:layout_row="5"
                app:layout_rowSpan="1"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="@dimen/listVerticalPadding"
                android:layout_marginBottom="@dimen/listVerticalPadding"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/time_saturday_name"
                android:singleLine="true"
                app:layout_columnSpan="1"
                app:layout_column="0"
                app:layout_row="6"
                app:layout_rowSpan="1"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="@dimen/listVerticalPadding"
                android:layout_marginBottom="@dimen/listVerticalPadding"/>

            <TextView
                android:id="@+id/time_saturday_time"
                android:singleLine="true"
                app:layout_columnSpan="1"
                app:layout_column="1"
                app:layout_row="6"
                app:layout_rowSpan="1"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="@dimen/listVerticalPadding"
                android:layout_marginBottom="@dimen/listVerticalPadding"/>

        </TableRow>

    </TableLayout>

</LinearLayout>
