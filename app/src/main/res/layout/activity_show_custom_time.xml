<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.customtimes.ShowCustomTimeActivity"
    android:orientation="vertical">

    <include layout="@layout/toolbar_edit_text"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/show_custom_time_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/listVerticalPadding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="7dp"
                    android:id="@+id/time_sunday_name"
                    android:singleLine="true"
                    android:textSize="@dimen/textPrimary"
                    android:textColor="@color/textPrimary"
                    tools:ignore="Deprecated"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    tools:ignore="RelativeOverlap">

                    <EditText
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="textNoSuggestions"
                        tools:ignore="Deprecated,LabelFor,TextFields"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/time_sunday_time"
                        android:singleLine="true"
                        android:textSize="@dimen/textPrimary"
                        android:textColor="@color/textPrimary"/>

                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

