<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".gui.tasks.CreateRootTaskActivity">

    <Button
        android:id="@+id/create_root_task_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/save"/>

    <EditText
        android:id="@+id/create_root_task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_root_task_save"
        android:singleLine="true" />

    <Spinner
        android:id="@+id/create_root_task_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_root_task_name" />
    
    <FrameLayout
        android:id="@+id/create_root_task_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/create_root_task_spinner" />

</RelativeLayout>
