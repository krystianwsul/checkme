<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/weekly_schedule_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="day" />

    <com.example.krystianwsul.organizatortest.TimePickerView
        android:id="@+id/weekly_schedule_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/weekly_schedule_day"/>

    <ImageView
        android:id="@+id/weekly_schedule_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_delete_black_24dp"/>

</RelativeLayout>