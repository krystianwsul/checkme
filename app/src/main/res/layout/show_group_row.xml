<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/show_group_row"
    android:useDefaultMargins="true"
    android:alignmentMode="alignBounds"
    android:columnCount="3"
    android:rowCount="2"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/group_row_img"
        android:layout_columnSpan="1"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_rowSpan="1"/>

    <TextView
        android:id="@+id/group_row_name"
        android:singleLine="true"
        android:layout_columnSpan="1"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:text="test" />

    <TextView
        android:id="@+id/group_row_details"
        android:singleLine="true"
        android:layout_columnSpan="1"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_rowSpan="1"
        android:text="test test test test test test test test test test test test test test test test " />

    <CheckBox
        android:id="@+id/group_row_checkbox"
        android:layout_columnSpan="1"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_rowSpan="1"/>
</GridLayout>