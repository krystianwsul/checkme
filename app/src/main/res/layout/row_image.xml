<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:orientation="horizontal">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/OldTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_an_image"
        android:textColorHint="@color/textDisabled"
        app:errorEnabled="true"
        app:hintAnimationEnabled="false">

        <EditText
            android:id="@+id/schedule_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:importantForAutofill="no"
            android:singleLine="true"
            android:textSize="@dimen/textPrimary"
            tools:ignore="Deprecated,LabelFor,TextFields"
            tools:targetApi="o" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageGallery"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/add_photo_alternate_black_24"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_add_a_photo_black_24dp"
        android:layout_toStartOf="@id/imageGallery" />

</RelativeLayout>