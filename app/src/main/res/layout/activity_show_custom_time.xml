<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".gui.customtimes.ShowCustomTimeActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/custom_time_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"/>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnCount="2"
        android:rowCount="7">

        <TextView
            android:id="@+id/time_sunday_name"
            android:singleLine="true"
            android:layout_columnSpan="1"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="1" />

        <TextView
            android:id="@+id/time_sunday_time"
            android:singleLine="true"
            android:layout_columnSpan="1"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_rowSpan="1" />

        <TextView
            android:id="@+id/time_monday_name"
            android:singleLine="true"
            android:layout_columnSpan="1"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_rowSpan="1" />

        <TextView
            android:id="@+id/time_monday_time"
            android:singleLine="true"
            android:layout_columnSpan="1"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_rowSpan="1" />

        <TextView
            android:id="@+id/time_tuesday_name"
            android:singleLine="true"
            android:layout_columnSpan="1"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_rowSpan="1" />

        <TextView
            android:id="@+id/time_tuesday_time"
            android:singleLine="true"
            android:layout_columnSpan="1"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_rowSpan="1" />

        <TextView
            android:id="@+id/time_wednesday_name"
            android:singleLine="true"
            android:layout_columnSpan="1"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_rowSpan="1" />

        <TextView
            android:id="@+id/time_wednesday_time"
            android:singleLine="true"
            android:layout_columnSpan="1"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_rowSpan="1" />

        <TextView
            android:id="@+id/time_thursday_name"
            android:singleLine="true"
            android:layout_columnSpan="1"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_rowSpan="1"/>

        <TextView
            android:id="@+id/time_thursday_time"
            android:singleLine="true"
            android:layout_columnSpan="1"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_rowSpan="1" />

        <TextView
            android:id="@+id/time_friday_name"
            android:singleLine="true"
            android:layout_columnSpan="1"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_rowSpan="1" />

        <TextView
            android:id="@+id/time_friday_time"
            android:singleLine="true"
            android:layout_columnSpan="1"
            android:layout_column="1"
            android:layout_row="5"
            android:layout_rowSpan="1" />

        <TextView
            android:id="@+id/time_saturday_name"
            android:singleLine="true"
            android:layout_columnSpan="1"
            android:layout_column="0"
            android:layout_row="6"
            android:layout_rowSpan="1" />

        <TextView
            android:id="@+id/time_saturday_time"
            android:singleLine="true"
            android:layout_columnSpan="1"
            android:layout_column="1"
            android:layout_row="6"
            android:layout_rowSpan="1" />

    </GridLayout>
</LinearLayout>
