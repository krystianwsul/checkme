<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.customtimes.ShowCustomTimeActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/custom_time_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <EditText
            android:id="@+id/custom_time_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="text"
            android:textColor="@color/textPrimaryWhite"
            android:hint="@string/name_hint"
            android:textColorHint="@color/textDisabledWhite"
            android:visibility="invisible"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/listVerticalPadding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingTop="7dp"
                android:id="@+id/time_sunday_name"
                android:singleLine="true"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textPrimary"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                tools:ignore="RelativeOverlap">

                <EditText
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    tools:ignore="LabelFor,TextFields"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_sunday_time"
                    android:singleLine="true"
                    android:textSize="@dimen/textPrimary"
                    android:textColor="@color/textPrimary"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/listVerticalPadding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingTop="7dp"
                android:id="@+id/time_monday_name"
                android:singleLine="true"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textPrimary"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                tools:ignore="RelativeOverlap">

                <EditText
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    tools:ignore="LabelFor,TextFields"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_monday_time"
                    android:singleLine="true"
                    android:textSize="@dimen/textPrimary"
                    android:textColor="@color/textPrimary"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/listVerticalPadding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingTop="7dp"
                android:id="@+id/time_tuesday_name"
                android:singleLine="true"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textPrimary"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                tools:ignore="RelativeOverlap">

                <EditText
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    tools:ignore="LabelFor,TextFields"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_tuesday_time"
                    android:singleLine="true"
                    android:textSize="@dimen/textPrimary"
                    android:textColor="@color/textPrimary"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/listVerticalPadding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingTop="7dp"
                android:id="@+id/time_wednesday_name"
                android:singleLine="true"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textPrimary"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                tools:ignore="RelativeOverlap">

                <EditText
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    tools:ignore="LabelFor,TextFields"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_wednesday_time"
                    android:singleLine="true"
                    android:textSize="@dimen/textPrimary"
                    android:textColor="@color/textPrimary"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/listVerticalPadding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingTop="7dp"
                android:id="@+id/time_thursday_name"
                android:singleLine="true"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textPrimary"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                tools:ignore="RelativeOverlap">

                <EditText
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    tools:ignore="LabelFor,TextFields"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_thursday_time"
                    android:singleLine="true"
                    android:textSize="@dimen/textPrimary"
                    android:textColor="@color/textPrimary"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/listVerticalPadding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingTop="7dp"
                android:id="@+id/time_friday_name"
                android:singleLine="true"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textPrimary"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                tools:ignore="RelativeOverlap">

                <EditText
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    tools:ignore="LabelFor,TextFields"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_friday_time"
                    android:singleLine="true"
                    android:textSize="@dimen/textPrimary"
                    android:textColor="@color/textPrimary"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/listVerticalPadding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingTop="7dp"
                android:id="@+id/time_saturday_name"
                android:singleLine="true"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/textPrimary"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                tools:ignore="RelativeOverlap">

                <EditText
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    tools:ignore="LabelFor,TextFields"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_saturday_time"
                    android:singleLine="true"
                    android:textSize="@dimen/textPrimary"
                    android:textColor="@color/textPrimary"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
