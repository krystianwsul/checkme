<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:foreground="@drawable/item_background_material"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:id="@+id/rowListMultilineContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="51dp"
        android:gravity="center_vertical">

        <include
            android:id="@+id/rowListMultilineCheckboxInclude"
            layout="@layout/row_list_checkbox" />

        <View
            android:id="@+id/rowListMultilineMargin"
            android:layout_width="16dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/rowListMultilineTextLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rowListMultilineName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/textPrimary"
                tools:ignore="Deprecated" />

            <TextView
                android:id="@+id/rowListMultilineDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/textSecondary"
                android:textSize="@dimen/textSecondary"
                tools:ignore="Deprecated" />

            <TextView
                android:id="@+id/rowListMultilineChildren"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/textSecondary"
                android:textSize="@dimen/textSecondary"
                tools:ignore="Deprecated" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/rowListMultilineChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>

        <ImageView
            android:id="@+id/rowListMultilineThumbnail"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="7dp"
            android:visibility="gone" />

        <View
            android:id="@+id/rowListMultilineMarginEnd"
            android:layout_width="16dp"
            android:layout_height="0dp"
            android:visibility="gone" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rowListMultilineBigImageLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="15dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/rowListMultilineBigImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

    </RelativeLayout>

    <View
        android:id="@+id/rowListMultilineSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:visibility="invisible" />

</LinearLayout>