<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".gui.tasks.ScheduleDialogFragment"
    android:baselineAligned="false">

    <Spinner
        android:id="@+id/schedule_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        style="@style/Widget.AppCompat.Spinner.Underlined"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/schedule_dialog_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:visibility="invisible"
            app:errorEnabled="true">

            <EditText
                android:id="@+id/schedule_dialog_date"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textSize="@dimen/textPrimary"
                tools:ignore="LabelFor,TextFields"/>

        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/schedule_dialog_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:visibility="invisible"/>

        <LinearLayout
            android:id="@+id/schedule_dialog_month_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">

            <EditText
                android:id="@+id/schedule_dialog_day_month"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textSize="@dimen/textPrimary"
                tools:ignore="LabelFor,TextFields"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textPrimary"
                android:textColor="@color/colorPrimary"
                android:text="@string/monthDay"/>

        </LinearLayout>

    </FrameLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/schedule_dialog_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:hintEnabled="false">

        <EditText
            android:id="@+id/schedule_dialog_time"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:singleLine="true"
            android:textSize="@dimen/textPrimary"
            tools:ignore="LabelFor,TextFields"/>

    </android.support.design.widget.TextInputLayout>

</LinearLayout>
