<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:orientation="horizontal">

    <ProgressBar
        android:id="@+id/imageProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:visibility="gone" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/imageLayout"
        style="@style/OldTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_an_image"
        android:textColorHint="@color/textDisabled"
        app:errorEnabled="true"
        app:hintAnimationEnabled="false">

        <EditText
            android:id="@+id/imageLayoutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:importantForAutofill="no"
            android:singleLine="true"
            android:textSize="@dimen/textPrimary"
            tools:ignore="Deprecated,LabelFor,TextFields"
            tools:targetApi="o" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_edit_black_24dp"
        android:background="@drawable/edit_bg"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>